  <h1>Edit <%= @project.title %> </h1>
 
  <%= form_for @project, :url => my_project_path(@project.id) do |f| %> 

    <p>
      <%= f.label :title %>
      <%= f.text_field :title %>
      </p>
      <p>
      <%= f.label :teaser %>
      <%= f.text_field :teaser %> 
      </p>
      <p>
      <%= f.label :description %>
      <%= f.text_area :description %>
      </p>
      <p>
      <%= f.label :goal %>
      <%= f.text_field :goal %>
      </p>
      <p>
      <h3> Upload Image <h3>
      <%= f.file_field :image %>
      </p>
      <p>
    <%= f.submit "Update Project" %> 
    </p>
  <% end %> 