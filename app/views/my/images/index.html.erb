<h1>Images for <%= @project.title %></h1>



<h4>Upload images</h4>

<%= form_for [:my, @project, @image] do  |f| %>
  <% if @images.count > 0 %>
    <% @images.each do |image| %>
        <%= image_tag image.image if !image.new_record? %>
        <br><%= link_to 'Delete Image', my_project_image_path(@project, image), :confirm => "Are you sure you want to delete this?", method: :delete if !image.new_record? %>       
    <% end %>
  <% else %>
    <p>No images currently exist for <%= @project.title %></p>
  <% end %>
  <%= f.file_field :image %>
  <p>
      <%= f.label :remote_image_url, "or image URL" %><br />
      <%= f.text_field :remote_image_url %>
  </p>
  <%= f.submit 'Upload Image', class: 'btn' %>
<% end %>


